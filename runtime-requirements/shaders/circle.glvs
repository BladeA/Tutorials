
#if __VERSION__ >= 130

in vec2 inPosition;
in vec2 inTexcoord;

out vec2 texCoord;

#else

attribute vec2 inPosition;
attribute vec2 inTexcoord;

varying vec2 texCoord;

#endif

uniform mat3 projection;

void main()
{
    vec3 xyPos = projection * vec3(inPosition,1.0);
    gl_Position = vec4(xyPos.xy+vec2(projection[0].z,projection[1].z),0.0,1.0);
    texCoord = inTexcoord;

}