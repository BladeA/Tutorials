#if __VERSION__ >= 130

in vec2 PositionVec;
in vec2 vertexUV;

out vec2 UV;

#else

attribute vec2 PositionVec;
attribute vec2 vertexUV;

varying vec2 UV;

#endif

uniform mat3 MVP;

void main()
{
    vec3 xyPos = MVP * vec3(PositionVec,1.0);
    gl_Position = vec4(xyPos.xy+vec2(MVP[0].z,MVP[1].z),0.0,1.0);
    UV = vertexUV;
}